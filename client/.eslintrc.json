{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["/build/**"],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "warn",
            {
                "code": 100
            }
        ],
        "react/no-unescaped-entities": ["off"],
        "react/prop-types": ["off"],
        "react/jsx-closing-tag-location": ["error"],
        "react/jsx-indent": ["error", 2],
        "no-console": ["warn"],
        "no-whitespace-before-property": ["error"],
        "no-trailing-spaces": ["error"]
    }
}
